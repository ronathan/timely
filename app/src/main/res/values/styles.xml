<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="app_theme_launch" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- Text Styles -->
    <style name="splash_screen_text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="h1">
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="h3">
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <!-- h1 -->
    <style name="timer_text" parent="h1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- h2 -->
    <style name="h2_white_bold" parent="h2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Activity -->
    <style name="base_container">
        <item name="android:padding">@dimen/activity_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:clipChildren">false</item>
    </style>

    <!-- Timer -->
    <style name="timer">
        <item name="android:translationY">@dimen/timer_negative_top_margin</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@drawable/bg_timer</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Form Input Fields -->
    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
    </style>

    <style name="text_input_layout_theme">
        <item name="hintTextAppearance">@style/text_input_hint</item>
        <item name="errorTextAppearance">@style/text_input_error</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textColorHint">@color/blue_dark</item>
        <item name="colorControlActivated">@color/blue_dark</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="text_input_hint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="text_input_error" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="text_input_edit_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
